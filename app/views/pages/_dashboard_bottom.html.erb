<div class="green d-flex justify-content-center align-items-start" style="height: 100%">
  <div class="container-tasks ml-4">
    <div class="blue d-flex justify-content-between px-4 pt-2" style="height: 15%"> <%# This height might be wrong because there is no defined height for parent %>
      <h1>Tasks</h1>
      <div class="d-flex align-items-center">
        <div class="btn btn-light" data-toggle="modal" data-target="#exampleModalCenter">
          Add Task
        </div>
      </div>
      <%= render "tasks/new_modal", task: @task %>
    </div>
    <div class="blue d-flex justify-content-around" style="height: 85%"> <%# This height might be wrong because there is no defined height for parent %>
      <div class="container-dark-purple">
        <div class="task-grid">
          <% @tasks.each do |task| %>
            <%= render "tasks_card", task: task %>
          <% end  %>
        </div>
      </div>
    </div>
  </div>
</div>
