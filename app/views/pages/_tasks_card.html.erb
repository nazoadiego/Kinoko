<%# task %>
<div class="card-task d-flex flex-column justify-content-between">
  <div class="d-flex justify-content-between mx-4 mt-2">
    <h5>
      <%= task.title %>
    </h5>
    <div>


        <%= render "shared/dropdown_menu", task: task%>

        <%= render "tasks/edit_modal", task: task %>



    </div>
  </div>
  <div>
      <div class="mb-6 ml-4">
       <p> <%= task.minutes %> mins </p>
      </div>
    <div class="d-flex justify-content-around align-items-center">
        <% if task.work_session != nil %>
          <%= link_to work_session_path(task.work_session), class: "btn btn-primary btn-sm btn-block" do %>
            Start Timebox
          <% end %>
        <% else %>
          <%= link_to task_work_sessions_path(task), method: :post, class: "btn btn-primary btn-sm btn-block" do %>
            Start Timebox
          <% end %>
        <% end %>
    </div>
  </div>
</div>
