<%# Dashboard Top %>

<div class="flex items-center justify-center mt-12">
  <div class="flex items-center">
    <div class="small-orb"></div>
  </div>

  <div class="flex items-center ml-8">
    <%= link_to root_path, style: "text-decoration: none" do %>
      <h1 style="font-size: 110px"><span style="color: #573BC9">Ki</span>noko</h1>
    <% end %>
  </div>
</div>


<%# Dasboard Bottom %>

<div class="mx-20">

       <div class="flex justify-between">
          <h3 class="purple">Tasks</h3>

          <button class="btn" data-toggle="modal" data-target="#exampleModalCenter">
            Add Task
          </button>
       </div>

       <%# Grid %>

      <div class="mt-8 grid gap-4 grid-cols-2 lg:grid-cols-4">
        <% @tasks.each do |task| %>
          <%= render "tasks_card", task: task %>
        <% end %>
      </div>

</div>

