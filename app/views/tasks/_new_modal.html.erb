<!-- The button to open modal -->

<!-- Put this part before </body> tag -->
<input type="checkbox" id="create-task" class="modal-toggle">
<label for="create-task" class="modal cursor-pointer">
  <label class="modal-box relative" for="">


    <%= simple_form_for(@task) do |f| %>

          <div class="form-inputs space-y-4 px-4 text-white">
              <h4 class="font-bold text-white mb-4">Create a new task!</h4>


              <%= f.input :title, input_html: {class: 'text-black w-full'} %>
              <%= f.input :minutes, label: 'Minutes/Seconds',
              input_html: {class: 'block w-1/3 px-4', maxlength: 1},
              wrapper_html: {class: 'flex flex-col justify-between'} do %>
                <div class="inline-flex">
                  <%= f.input_field :minutes, value: 0, class: 'text-black w-1/3' %>
                  <%= f.input_field :seconds, value: 0, class: 'text-black w-1/3' %>
                </div>
              <% end %>


                <div data-tooltip="Assign labels to your tasks to track your progress">
                  Assign Labels <span class="assign-label">Info</span>
                </div>
                <p class="flex justify-evenly">
                  <%= f.collection_check_boxes :label_ids, Label.all, :id, :name do |b| %>
                    <%= b.check_box(class: "tag-selector p-12") %><%= b.label %>
                  <% end %>
                </p>


                <div class="newlabel">
                  <h5 class="text-white">Add a new label</h5>
                  <div class="flex flex-col justify-between">
                    Name<%= text_field_tag 'task[new_label]',
                    nil, placeholder: '', class: 'text-black' %>
                  </div>
                  <div class="flex flex-col justify-between">
                    Goal Hours<%= number_field_tag 'task[new_label_goal]',
                    nil, placeholder: '', class: 'text-black' %>
                  </div>
                </div>


          </div>


        <div class="modal-action px-4">
          <label for="my-modal" class="btn">Close</label>
          <%= f.submit 'Save Changes', class: 'btn btn-primary'%>
        </div>
    <% end %>
  </label>
</label>
