<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Timebox</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@task, @timebox] do |f| %>
          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :minutes, as: :integer %>
            <%= f.input :seconds, as: :integer %>
            <fieldset class="form-group boolean optional break">
              <div class="form-check">
                <input name="break" type="hidden" value="0">
                <input class="form-check-input boolean optional toggle" type="checkbox" value="1" name="break" id="break">
                <label class="form-check-label boolean optional" for="break">Break</label>
              </div>
            </fieldset>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
