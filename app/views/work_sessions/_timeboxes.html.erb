<% order = 1 %>
<% @timeboxes.each do |timebox| %>
  <% timebox.order = order %>
  <% timebox.save %>
  <% order += 1 %>
  <div class="card-timebox flex flex-col w-full px-4 py-8">

    <div class="flex justify-between">
      <h4>
        <%= timebox.title %>
      </h4>
      <%= link_to timeboxes_path(timebox), method: :delete, id: timebox.id, data: {confirm: "Are you sure?"}, class: "card-remove-link" do %>
        <i class="fas fa-trash text-white"></i>
      <% end %>
    </div>

    <p class="remainder" data-timeboxduration="<%= (timebox.duration * 1000) %>" hidden></p>
    <p class="set-times" hidden></p>
    <p class="time-minutes" data-minutes="<%= timebox.minutes %>" hidden></p>
    <p class="time-seconds" data-seconds="<%= timebox.seconds %>" hidden></p>

    <div class="flex justify-end">
        <p class="timer-min" data-done=""><%= format('%02d', timebox.minutes) %></p>
        <span>:</span>
        <p class="timer-sec" data-done=""><%= format('%02d', timebox.seconds) %></p>
    </div>

  </div>
<% end %>
